<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Library</title>
  </head>
  <body>
    <%- include("../components/header"); -%>

    <ul>
        <% books.forEach(book => { %>
            <li> 
                <a href="/book/<%= book.id %>">
                    <%= book.id %> -
                    <%= book.title %>
                </a>
            </li>
        <% }); %>
    </ul>
  </body>
</html>
